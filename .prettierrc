{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80,
    "tabWidth": 4,
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxSingleQuote": false,
    "jsxBracketSameLine": false,
    "endOfLine": "lf",
    "useTabs": false,
    "overrides": [
        {
            "files": ["*.tsx", "*.ts"],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": ["*.jsx", "*.js"],
            "options": {
                "parser": "babel"
            }
        }
    ]
}
